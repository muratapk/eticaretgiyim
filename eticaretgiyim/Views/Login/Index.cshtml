@model eticaretgiyim.Dto.LoginDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registration Form</h4>
        </div>

        <div class="card-body">
            <form asp-action="Index" asp-controller="Login" method="post">

               

              

               

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" asp-for="UserName" placeholder="Enter username">
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" asp-for="Password" placeholder="Enter password">
                    </div>

                   
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>

            </form>
        </div>
    </div>
</div>

